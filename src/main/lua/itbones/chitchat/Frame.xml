          <Anchor point="TOPLEFT" relativeTo="ChitchatFrameEntry5" relativePoint="BOTTOMLEFT"/>
        </Anchors>
      </Button>
      <Button name="ChitchatFrameEntry7" inherits="ChitchatFrameEntryTemplate">
        <Anchors>
